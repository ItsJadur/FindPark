<h1>{{title}}</h1>

<div class="park-details">
	<h2>{{park.fullName}}</h2>
	<p><strong>Description:</strong> {{park.description}}</p>
	<p><strong>Location:</strong> {{park.states}}</p>
	<p><strong>Designation:</strong> {{park.designation}}</p>
	<p><strong>Directions:</strong> {{park.directionsInfo}}</p>
	<p><strong>Operating Hours:</strong></p>
	<ul>
		{{#each park.operatingHours}}
			<li>{{description}}</li>
		{{/each}}
	</ul>
	<p><strong>Entrance Fees:</strong></p>
	<ul>
		{{#each park.entranceFees}}
			<li>{{title}}: ${{cost}}</li>
		{{/each}}
	</ul>
	<a href="{{park.url}}" target="_blank">Visit Official Website</a>
</div>

<a href="/nat" class="btn btn-primary">Back to Parks</a>